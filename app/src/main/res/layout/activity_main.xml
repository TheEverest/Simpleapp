<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.reliancedigital.simpleapp.MainActivity">

    <TextView
        android:id="@+id/textone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="clicked value is : 0"
        android:textAlignment="gravity"
        android:textSize="30dp" />
    <Button
        android:id="@+id/buttonone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textone"
        android:layout_marginTop="20dp"
        android:text="click to add one"
        android:textSize="30dp"/>
    <Button
        android:id="@+id/buttontwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonone"
        android:layout_marginTop="20dp"
        android:text="click to subtract one"
        android:textSize="30dp"/>
    <Button
        android:id="@+id/buttonthree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttontwo"
        android:layout_marginTop="20dp"
        android:text="click to multiply two"
        android:textSize="30dp"/>
    <Button
        android:id="@+id/buttonfourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonthree"
        android:layout_marginTop="20dp"
        android:text="click to reset"
        android:textSize="30dp"/>


</RelativeLayout>
